<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="4dp"
    card_view:contentPadding="10dp"
    card_view:cardCornerRadius="5dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/category_label"
            android:hint="Category "
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:id="@+id/category_value"
            android:hint="The Category"
            android:textSize="18dp"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_alignTop="@+id/category_label"
            android:layout_toRightOf="@+id/category_label"
            android:layout_toEndOf="@+id/category_label"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            />
        <TextView
            android:id="@+id/date_label"
            android:hint="Date         "
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/category_label"
            />
        <TextView
            android:id="@+id/date_value"
            android:hint="The Date"
            android:textSize="18dp"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_alignTop="@+id/date_label"
            android:layout_toRightOf="@+id/date_label"
            android:layout_toEndOf="@+id/date_label"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            />
        <TextView
            android:id="@+id/user_label"
            android:hint="Name       "
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_below="@+id/date_label"
            android:layout_alignRight="@+id/date_label"
            android:layout_alignEnd="@+id/date_label" />

        <TextView
            android:id="@+id/user_value"
            android:hint="User Name"
            android:textSize="18dp"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_alignTop="@+id/user_label"
            android:layout_toEndOf="@+id/user_label"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/date_value"
            android:layout_alignStart="@+id/date_value"
            android:layout_toRightOf="@+id/user_label" />

        <TextView
            android:id="@+id/address_label"
            android:hint="Address  "
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_below="@+id/user_label"
            android:layout_alignRight="@+id/user_label"
            android:layout_alignEnd="@+id/user_label" />

        <TextView
            android:id="@+id/address_value"
            android:hint="Address"
            android:textSize="18dp"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_alignTop="@+id/address_label"
            android:layout_toEndOf="@+id/address_label"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/date_value"
            android:layout_alignStart="@+id/date_value"
            android:layout_toRightOf="@+id/address_label" />

        <TextView
            android:id="@+id/total_worker_label"
            android:hint="Total       "
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_below="@+id/address_label"
            android:layout_alignRight="@+id/address_label"
            android:layout_alignEnd="@+id/address_label" />

        <TextView
            android:id="@+id/total_worker_value"
            android:hint="Total Worker"
            android:textSize="18dp"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_alignTop="@+id/total_worker_label"
            android:layout_toEndOf="@+id/total_worker_label"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/date_value"
            android:layout_alignStart="@+id/date_value"
            android:layout_toRightOf="@+id/total_worker_label" />
    </RelativeLayout>



</android.support.v7.widget.CardView>